{
	"name": "TextareaVoicer",
	"version": "0.1",
	"description": "Add voice support to input[type=text] and textareas.",
	"permissions": [
		"tabs", "http://*/*", "https://*/*"
	],
	"background_page": "back.html",
	"content_scripts": [{
		"matches": ["http://*/*","https://*/*"],
		"js": ["jquery","voicer"],
		"run_at": "document_end",
		"all_frames": false
	}],
	"browser_action": {
	"default_icon": "en.png", // optional
	"default_title": "Textarea Voice",      // optional; shown in tooltip
	"default_popup": "popup.html"        // optional
  }
}